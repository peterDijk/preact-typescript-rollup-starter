{
  "name": "preact-ts-rollup-starter",
  "version": "1.0.0",
  "main": "index.js",
  "module": "dist/bundle.js",
  "private": true,
  "author": "Peter van Dijk <petervandijk@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run rollup:watch",
    "tsc": "tsc -p ./",
    "tsc:watch": "tsc -p ./ -w",
    "clean": "rm -rf dist/*",
    "rollup": "rollup -c rollup.config.js",
    "rollup:watch": "rollup -c rollup.config.js -w",
    "build": "npm run clean && npm run rollup"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "prettier": "^1.19.1",
    "rollup": "^1.22.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-generate-html-template": "^1.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.3",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "preact": "^10.0.0",
    "serialize-javascript": "^2.1.2"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "bracketSpacing": true
  },
  "browserslist": [
    "Chrome 68",
    "Edge 17",
    "Explorer 11",
    "Firefox 61",
    "iOS 11",
    "Safari 11"
  ]
}
