{
  "name": "preact-ts-rollup-starter",
  "version": "1.0.0",
  "main": "index.js",
  "module": "dist/bundle.js",
  "private": true,
  "author": "Peter van Dijk <petervandijk@gmail.com>",
  "license": "MIT",
  "scripts": {
    "series": "set -e; foo() for i in $@; do npm run $i; done; foo",
    "start": "concurrently --kill-others \"npm run tsc:watch\" \"npm run build:watch\" \"node server.js\" --prefix \"[{name}]\" --names \"TSC,ROLLUP,SERVER\"",
    "clean": "rm -rf dist/*",
    "tsc": "tsc --outDir dist/es7",
    "babel": "babel --out-dir dist/es5 dist/es7",
    "rollup": "rollup -c --input dist/es7/index.js",
    "rollup-es5": "rollup -c --input dist/es5/index.js",
    "build": "yarn series clean tsc rollup",
    "build-ie": "yarn series clean tsc babel rollup-es5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "concurrently": "^4.1.2",
    "jspm": "^2.0.0-beta.7",
    "jspm-hmr": "^1.0.0-rc7",
    "rollup": "^1.22.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "preact": "^10.0.0"
  },
  "babel": {
    "inputSourceMap": true,
    "sourceMap": true,
    "ignore": [
      "node_modules"
    ],
    "presets": [
      [
        "@babel/env",
        {
          "debug": true,
          "loose": true,
          "modules": false,
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": []
  },
  "browserslist": [
    "Chrome 68",
    "Edge 17",
    "Explorer 11",
    "Firefox 61",
    "iOS 11",
    "Safari 11"
  ]
}
